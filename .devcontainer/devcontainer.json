{
    "name": "Inventory Microservices",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "identity_service", // Serviço padrão para abrir o terminal
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "dbaeumer.vscode-eslint",            // Adicionado para TSX
                "esbenp.prettier-vscode",            // Adicionado para formatação
                "bradlc.vscode-tailwindcss",         // Adicionado para Tailwind
                "dsznajder.es7-react-js-snippets"    // Snippets de React
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3",
                "python.formatting.provider": "black",
                "python.linting.flake8Enabled": true,
                "python.linting.enabled": true,
                "editor.formatOnSave": true, // Garante PEP 8 ao salvar
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "always"
                }
            }
        }
    },
    "remoteUser": "root"
}